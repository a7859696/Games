<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_puzzle_main_main_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">
    <LinearLayout
        android:id="@+id/p_ll_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:layout_margin="8dp">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="步数:"
            android:gravity="center"
            android:textSize="24sp"
            android:layout_marginLeft="40dp"
            android:textColor="@color/colortextpuzzle"
            android:layout_gravity="center"/>
        <TextView
            android:id="@+id/p_tv_counts"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"
            android:paddingLeft="5dp"
            android:textColor="@color/colortextpuzzle"
            android:layout_gravity="center"
            android:text="0"/>
        </LinearLayout>
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:textColor="@color/colortextpuzzle"
            android:layout_gravity="center"
            android:gravity="center"
            android:paddingLeft="10dp"
            android:text="时间："/>
        <TextView
            android:id="@+id/p_tv_times"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="24sp"
            android:gravity="center"

            android:text="0"
            android:textColor="@color/colortextpuzzle"
            android:layout_gravity="center"
           />
    </LinearLayout>
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:id="@+id/p_ll_record"
            android:orientation="vertical"
            android:layout_gravity="right"
            android:layout_marginRight="20dp"
            >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="最好记录"
            android:layout_gravity="center"
            android:textColor="@color/colortextpuzzle"
            android:gravity="center"
           />
        <TextView
            android:id="@+id/p_tv_beststeps"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:textColor="@color/colortextpuzzle"
            android:gravity=""/>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:id="@+id/p_ll_3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_margin="8dp"
        >
        <Button
            android:id="@+id/p_bt_origin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            android:text="原图"
            android:textColor="@color/background"/>
        <Button
            android:id="@+id/p_bt_reset"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="重置"
            android:layout_margin="8dp"
            android:textColor="@color/background"/>
        <Button
            android:id="@+id/p_bt_back"
            android:layout_margin="8dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="返回"
            android:textColor="@color/background"/>

    </LinearLayout>
    <GridView
        android:id="@+id/p_gridview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/p_ll_3"
        android:layout_below="@+id/p_ll_1"
        android:layout_centerInParent="true"
        android:layout_margin="8dp"
        >
    </GridView>
<!--<ImageView
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:id="@+id/test_ig"
    android:layout_above="@+id/p_ll_3"
    android:layout_below="@+id/p_ll_1"
    android:src="@drawable/pic1"
    android:visibility="gone"
    />-->
</RelativeLayout>
